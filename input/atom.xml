template: self
suppress: yes

<feed xmlns="http://www.w3.org/2005/Atom">

  <title>Brizzled: Brian Clapper's Blog</title>
  <link href="http://brizzled.clapper.org/"/>
  <updated>{{ settings.build_time|datetimeformat('%Y-%m-%dT%H:%M:%S%z') }}</updated>
  <author>
    <name>Brian M. Clapper</name>
    <email>bmc@clapper.org</email>
  </author>
  <id>http://brizzled.clapper.org/</id>

  {% for article in articles if (article.headers.url.find('-summary') == -1) and (not article.headers.suppress is defined) %}

  <entry>
    <title>{{ article.headers.title }}</title>
    <link href="{{ article.headers.url }}"/>
    <id>{{ article.headers.url }}</id>
    <updated>{{ article.headers.date|datetimeformat('%Y-%m-%dT%H:%M:%S%z') }}</updated>
    <content type="xhtml">
      <div xmlns="http://www.w3.org/1999/xhtml">
<![CDATA[
{{ article.body }}
]]>
      </div>
    </content>
{#
    <summary type="xhtml">
      <div xmlns="http://www.w3.org/1999/xhtml">$article.description$</div>
    </summary>
#}

    <author>
      <name>Brian M. Clapper</name>
      <email>bmc@clapper.org</email>
    </author>
  </entry>

  {% endfor %}
</feed>
