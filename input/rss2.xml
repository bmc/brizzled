template: self
suppress: yes

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>Brizzled: Brian Clapper's Blog</title>
    <link>http://brizzled.clapper.org/</link>
    <description>Brian Clapper's Blog</description>
    <copyright>Copyright &copy; 2009-2011 Brian M. Clapper</copyright>
    <webMaster>bmc@clapper.org</webMaster>
    <pubDate>{{ settings.build_time|datetimeformat('%a, %d %b %Y %H:%M:%S %z') }}</pubDate>

  {% for article in articles if (article.headers.url.find('-summary') == -1) and (not article.headers.suppress is defined) %}

    <item>
      <title>{{ article.headers.title }}</title>
      <link>{{ article.headers.url }}</link>
      <guid>{{ article.headers.url }}</guid>
      <pubDate>{{ article.headers.date|datetimeformat('%a, %d %b %Y %H:%M:%S %z') }}</pubDate>
      <description>
<![CDATA[
{{ article.body }}
]]>
      </description>
      <author>bmc@clapper.org</author>
    </item>
  {% endfor %}
  </channel>
</rss>
